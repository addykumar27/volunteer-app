<%= render ('/layouts/largenavbar') %>

<div class="container-fluid">
  <div class="row profile">
    <div class="col-sm-3 col-md-3 col-lg-3">
    <div class="col-sm-9 col-md-9 col-lg-9">
      
     <% if request.original_fullpath == '/causes/:cause' %>
        <h1 class="Human Rights & Advocacy">Human Rights & Advocacy</h1>
      <% end %>
      <% if request.original_fullpath == '/causes/:cause' %>
        <h1 class="Children & Youth">Children & Youth</h1>
      <% end %>
      <% if request.original_fullpath == '/causes/:cause' %>
        <h1 class="Homeless & Housing">Homeless & Housing</h1>
      <% end %>
      <% if request.original_fullpath == '/causes/:cause' %>
        <h1 class="Environment">Environment</h1>
      <% end %>
      
      <% @opportunities.each do |opportunity| %>
        <div class="container-fluid allopps">
          <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">  
                <div class="container-fluid content">
                  <div class="col-sm-8">
                    <div class="pull-left">
                      <%= opportunity.name %>
                    </div>
                  </div>
                </div>
                <div class="pull-left">
                  <%= link_to opportunity.cause, cause_path(opportunity.cause) %>
                  <% if !current_user.nil? && current_user == opportunity.user %>
                    <%= link_to delete_user_opp_path(current_user, opportunity), data: { confirm: "Are you sure you want to remove this from your list?" }, method: :delete do %>
                      <span class="glyphicon glyphicon-remove"></span>
                    <% end %>
                  <%= opportunity.created_at.strftime("%a, %b %d, %Y @ %l:%M %p %Z") %>
                </div>
              </div>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

      